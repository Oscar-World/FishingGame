<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transperancy"
    android:gravity="center"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linerLayoutIsFish"
        android:layout_width="190dp"
        android:layout_height="280dp"
        android:background="@drawable/background_collection_item"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imageViewCollectedFish"
            android:layout_width="140dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/fish"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFishName"
            style="@style/boldStyle"
            android:text="물고기"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFishSize"
            style="@style/boldStyle"
            android:text="00~00cm"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/linearLayoutIsNotFish"
        android:layout_width="190dp"
        android:layout_height="280dp"
        android:layout_margin="10dp"
        android:background="@drawable/background_collection_item">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hide"
            android:padding="25dp"
            />

    </LinearLayout>


</LinearLayout>